{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "jest": true
  },
  "globals": {
    "window": true,
    "document": true
  },
  "rules": {
    "import/no-unresolved": "off", // ESLint error: unable to resolve module.
    "import/prefer-default-export": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "quotes": [2, "single", { "avoidEscape": true }],
    "no-shadow": "off",
    "global-require": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "#components": "./src/components",
        "#pages": "./src/pages",
        "#routes": "./src/routes",
        "#services": "./src/services",
        "#static": "./src/static",
        "#store": "./src/store",
        "#style": "./src/style",
        "#utils": "./src/utils"
      }
    }
  }
}
